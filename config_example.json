{
  "_comment": "=== Bilibili 监控配置 ===",
  "enabled": false,
  "check_interval": 30,
  "up_masters": [
    {
      "mid": "123456",
      "name": "示例UP主1"
    },
    {
      "mid": "789012",
      "name": "示例UP主2"
    }
  ],
  "target_groups": [
    "qq:group:123456789",
    "telegram:group:987654321"
  ],
  "ai_summary_enabled": true,
  "ai_prompt_template": "你是一个专业的 B 站内容分析助手。请分析以下 UP 主的最新视频信息，生成一份简洁的总结报告。\n\n要求：\n1. 总结视频的主要内容和亮点\n2. 分析视频数据（播放量、点赞等）的表现\n3. 提取关键信息点\n4. 保持客观、准确、易读\n\n请用中文输出，使用 Markdown 格式。",
  "max_videos_per_check": 5,
  "include_video_stats": true,
  "markdown_style": "detailed",
  "openrouter_api_key": "",
  "openrouter_model": "minimax/minimax-m2:free",
  "send_summary_only": false,
  "batch_send_delay": 2,

  "_comment2": "=== 知乎 RSS 监控配置 ===",
  "zhihu_feeds": [
    {
      "feed_url": "https://www.zhihu.com/rss",
      "name": "知乎热榜",
      "enabled": true,
      "check_bilibili_links": true
    },
    {
      "feed_url": "https://rsshub.app/zhihu/people/activities/example-user",
      "name": "示例用户动态",
      "enabled": false,
      "check_bilibili_links": true
    }
  ],
  "zhihu_check_interval": 60,

  "_comment3": "=== 高级调度配置 ===",
  "use_advanced_scheduler": true,
  "bilibili_cron": "",
  "zhihu_cron": "",

  "_comment4": "=== 每日报告配置 ===",
  "daily_report_enabled": false,
  "daily_report_time": "09:00",
  "daily_report_categorize": true,
  "daily_report_ai_summary": true,
  "daily_report_min_importance": 0.3,
  "daily_report_max_items": 10,

  "_comment5": "=== 图表可视化配置 ===",
  "chart_enabled": true,
  "chart_output_format": "png",
  "chart_dpi": 100,
  "chart_figsize": [10, 6],
  "chart_style": "seaborn-v0_8-darkgrid",
  "chart_color_scheme": "default",
  "chart_save_to_file": false,
  "chart_output_dir": "data/charts",

  "_comment6": "=== 配置说明 ===",
  "_help": {
    "bilibili_cron_examples": [
      "0 9,12,18 * * * - 每天 9点、12点、18点",
      "0 */2 * * * - 每 2 小时",
      "0 9 * * 1-5 - 工作日早上 9 点"
    ],
    "zhihu_feed_sources": [
      "知乎官方 RSS: https://www.zhihu.com/rss",
      "RSSHub 知乎用户动态: https://rsshub.app/zhihu/people/activities/{user_id}",
      "RSSHub 知乎专栏: https://rsshub.app/zhihu/zhuanlan/{column_id}",
      "RSSHub 知乎热榜: https://rsshub.app/zhihu/hotlist"
    ],
    "importance_score_guide": {
      "0.0-0.3": "低重要度 - 一般内容",
      "0.3-0.5": "中等重要度 - 有一定价值",
      "0.5-0.7": "较高重要度 - 值得关注",
      "0.7-1.0": "高重要度 - 重点内容"
    },
    "chart_style_examples": [
      "seaborn-v0_8-darkgrid - 深色网格（推荐）",
      "ggplot - R语言 ggplot2 风格",
      "bmh - Bayesian Methods for Hackers 风格",
      "fivethirtyeight - FiveThirtyEight 新闻网站风格",
      "default - matplotlib 默认风格"
    ],
    "chart_types_generated": [
      "category_distribution - 内容分类分布（柱状图）",
      "importance_distribution - 重要度分布（直方图）",
      "top_sources - 热门来源排行（横向柱状图）",
      "activity_heatmap - 发布活动热力图（7天x24小时）",
      "content_timeline - 内容发布时间线（折线图）"
    ]
  }
}

